<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto,"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f3f5"

    android:padding="20dp"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_schedule_Guideline_horizontal_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_schedule_Guideline_horizontal_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.16"

        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_schedule_Guideline_horizontal_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_schedule_Guideline_horizontal_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_schedule_Guideline_horizontal_05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_schedule_Guideline_horizontal_06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintGuide_percent="0.72"
        android:orientation="horizontal"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_schedule_Guideline_horizontal_07"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.86"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_schedule_Guideline_vertical_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.86"
        />

    <LinearLayout
        android:id="@+id/activity_schedule_LinearLayout_monthLine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/activity_schedule_Guideline_horizontal_01"
        >

        <TextView
            android:id="@+id/tv_prev_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PREV"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_current_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="@string/schedule_year_month"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_next_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textSize="15dp" />
    </LinearLayout>

    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:orientation="vertical"
        app:layout_constraintVertical_weight="9"


        app:layout_constraintTop_toBottomOf="@+id/activity_schedule_LinearLayout_monthLine"
        >
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0.1"

        android:background="#e0e7ee"
        android:gravity="center"
        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@+id/activity_schedule_LinearLayout_monthLine"
        app:layout_constraintBottom_toBottomOf="@+id/activity_schedule_Guideline_horizontal_02"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SUN"
            android:textColor="#969a9b"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MON"
            android:textColor="#969a9b"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TUE"
            android:textColor="#969a9b"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="WED"
            android:textColor="#969a9b"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="THU"
            android:textColor="#969a9b"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="FRI"
            android:textColor="#969a9b"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SAT"
            android:textColor="#969a9b"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>
