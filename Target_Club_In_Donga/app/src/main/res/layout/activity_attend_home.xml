<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="9dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/Top_Content_Text_Style"
            android:text="출석체크" />

        <View style="@style/Line_Style" />

        // 출석관리

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Google_Login">

            <Button
                android:id="@+id/activity_attend_home_button_insert"
                style="@style/Content_Classification_Text_Style"
                android:layout_width="wrap_content"
                android:text="출석추가"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/activity_attend_home_button_information"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/activity_attend_home_button_information"
                style="@style/Content_Classification_Text_Style"
                android:layout_width="wrap_content"
                android:text="출결관리자 (출결정보)"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/activity_attend_home_button_insert"
                tools:layout_editor_absoluteX="0dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_attend_home_recyclerview_main_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:scrollbarFadeDuration="0"
                android:scrollbarSize="10dp"
                android:scrollbarThumbVertical="@android:color/darker_gray"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toTopOf="@+id/activity_attend_home_button_insert"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

