<?xml version="1.1" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f3f5"

    >

    <LinearLayout
        android:id="@+id/activity_schedule_LinearLayout_monthLine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="@+id/activity_schedule_Guideline_horizontal_01"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_prev_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PREV"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_current_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="@string/schedule_year_month"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_next_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/activity_schedule_TextView_DayOfWeek_01"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#e0e7ee"

        android:gravity="center"
        android:text="@string/DayOfWeek"
        android:textColor="#969a9b"

        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/activity_schedule_Guideline_horizontal_02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/activity_schedule_Guideline_vertical_01"
        app:layout_constraintTop_toBottomOf="@+id/activity_schedule_LinearLayout_monthLine" />

    <TextView
        android:id="@+id/activity_schedule_TextView_DayOfWeek_02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#e0e7ee"

        android:gravity="center"
        android:text="@string/DayOfWeek"
        android:textColor="#969a9b"

        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/activity_schedule_Guideline_horizontal_02"
        app:layout_constraintLeft_toLeftOf="@+id/activity_schedule_Guideline_vertical_01"
        app:layout_constraintRight_toRightOf="@+id/activity_schedule_Guideline_vertical_02"
        app:layout_constraintTop_toBottomOf="@+id/activity_schedule_LinearLayout_monthLine" />

    <TextView
        android:id="@+id/activity_schedule_TextView_DayOfWeek_03"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#e0e7ee"

        android:gravity="center"
        android:text="@string/DayOfWeek"
        android:textColor="#969a9b"

        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/activity_schedule_Guideline_horizontal_02"
        app:layout_constraintLeft_toLeftOf="@+id/activity_schedule_Guideline_vertical_02"
        app:layout_constraintRight_toRightOf="@+id/activity_schedule_Guideline_vertical_03"
        app:layout_constraintTop_toBottomOf="@+id/activity_schedule_LinearLayout_monthLine" />

    <TextView
        android:id="@+id/activity_schedule_TextView_DayOfWeek_04"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#e0e7ee"

        android:gravity="center"
        android:text="@string/DayOfWeek"
        android:textColor="#969a9b"

        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/activity_schedule_Guideline_horizontal_02"
        app:layout_constraintLeft_toLeftOf="@+id/activity_schedule_Guideline_vertical_04"
        app:layout_constraintRight_toRightOf="@+id/activity_schedule_Guideline_vertical_05"
        app:layout_constraintTop_toBottomOf="@+id/activity_schedule_LinearLayout_monthLine" />

    <TextView
        android:id="@+id/activity_schedule_TextView_DayOfWeek_05"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#e0e7ee"

        android:gravity="center"
        android:text="@string/DayOfWeek"
        android:textColor="#969a9b"

        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/activity_schedule_Guideline_horizontal_02"
        app:layout_constraintLeft_toLeftOf="@+id/activity_schedule_Guideline_vertical_05"
        app:layout_constraintRight_toRightOf="@+id/activity_schedule_Guideline_vertical_06"
        app:layout_constraintTop_toBottomOf="@+id/activity_schedule_LinearLayout_monthLine" />

    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:orientation="vertical"
        app:layout_constraintVertical_weight="9"


        app:layout_constraintTop_toBottomOf="@+id/activity_schedule_LinearLayout_monthLine"
