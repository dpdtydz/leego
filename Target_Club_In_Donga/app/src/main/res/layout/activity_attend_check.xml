<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/Top_Content_Text_Style"
        android:text="출석체크" />

    <TextView
        style="@style/Content_Classification_Text_Style"
        android:text="인증번호를 입력해주세요" />

    <EditText
        android:id="@+id/activity_attend_check_edittext_certification_number"
        style="@style/Content_Text_Style"
        android:hint="숫자만 입력해주세요"
        android:inputType="number"
        android:digits="0123456789"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <Button
        android:id="@+id/activity_attend_check_button_confirm"
        style="@style/Content_Classification_Text_Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/activity_attend_check_button_cancel"
            style="@style/Content_Classification_Text_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:layout_toRightOf="@+id/activity_attend_check_button_confirm"/>


    </RelativeLayout>
</LinearLayout>