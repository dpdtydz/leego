<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/material_edit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        style="@style/Top_Content_Text_Style"
        android:text="물품 등록하기" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_material_rental_admin_insert_imageview_image"
            app:civ_border_width="0.5dp"
            app:civ_border_color="#FF000000"
            android:layout_width="150dp"
            android:background="@drawable/picture_que_ver0"

            app:layout_constraintHorizontal_bias="0.5"
            android:layout_height="150dp"

            app:layout_constraintVertical_bias="0.4"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/activity_material_rental_admin_insert_edittext_item_name"
                style="@style/Content_Text_Style"
                android:hint="물품명" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        </ScrollView>

        <Button
            android:id="@+id/activity_material_rental_admin_insert_button_insert"
            android:background="@drawable/logoin_button_ver0"
            android:textColor="@color/color_White"
            style="@style/Content_Classification_Text_Style"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-2dp"
            android:text="등록하기" />
    </RelativeLayout>
</LinearLayout>