<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="2">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">

    <LinearLayout
        android:id="@+id/activity_material_rental_admin_item_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_material_rental_admin_item_imageview_recyclerview_image"
            app:civ_border_width="0.5dp"
            app:civ_border_color="#FF000000"
            android:layout_width="100dp"
            android:background="@drawable/picture_que_ver0"

            app:layout_constraintHorizontal_bias="0.5"
            android:layout_height="100dp"

            app:layout_constraintVertical_bias="0.4"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/activity_material_rental_admin_item_textview_recyclerview_item_name"
                style="@style/Content_Text_Style"
                android:text="물품명" />

            <View
                style="@style/Line_Style" />

            <TextView
                style="@style/Content_Classification_Text_Style"
                android:text="대여자"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/activity_material_rental_admin_item_textview_recyclerview_lender"
                style="@style/Content_Text_Style"
                android:text="없음" />

            <View
                style="@style/Line_Style" />

            <TextView
                style="@style/Content_Classification_Text_Style"
                android:text="대여 끝나는 날짜"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/activity_material_rental_admin_item_recyclerview_timestamp"
                style="@style/Content_Text_Style" />

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/Line_Style" />

</LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/arrow_btn"
        android:layout_marginRight="15dp"
        android:layout_gravity="right|center" />

</LinearLayout>